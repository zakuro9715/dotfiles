[user]
  name = zakuro
  email = z@kuro.red
[init]
  defaultBranch = main
[pull]
  rebase = false
[core]
  editor = vim -c \"set fenc=utf-8\"
  excludesfile = ~/.gitignore
  autocrlf = input

# red    204
# green  78
# blue   75
# yellow 222
[color "diff"]
  new = 78
  newMoved = 78
  frag = 75
  old = 204
  oldMoved = 204
[color "status"]
  branch = 78
  localBranch = 78
  remoteBranch = 78
  nobranch = 204
  added = 78
